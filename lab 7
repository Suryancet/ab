Main activity.java
package com.example.gagan_050_7;

import androidx.appcompat.app.AppCompatActivity;

import android.os.Bundle;
import android.view.View;
import android.widget.EditText;
import android.widget.TextView;

public class MainActivity extends AppCompatActivity {
    EditText edt1,edt2;
    TextView tv;
    int no1,no2;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        edt1=(EditText)findViewById(R.id.e1);
        edt2=(EditText) findViewById(R.id.e2);
        tv=(TextView) findViewById(R.id.t1);
    }

    public void ADD(View view) {
        no1=Integer.parseInt(edt1.getText().toString());
        no2=Integer.parseInt(edt2.getText().toString());
        tv.setText(String.valueOf(no1+no2));
    }

    public void SUD(View view) {
        no1=Integer.parseInt(edt1.getText().toString());
        no2=Integer.parseInt(edt2.getText().toString());
        tv.setText(String.valueOf(no1-no2));
    }

    public void MUL(View view) {
        no1=Integer.parseInt(edt1.getText().toString());
        no2=Integer.parseInt(edt2.getText().toString());
        tv.setText(String.valueOf(no1*no2));
    }

    public void DIV(View view) {
        no1=Integer.parseInt(edt1.getText().toString());
        no2=Integer.parseInt(edt2.getText().toString());
        tv.setText(String.valueOf(no1/no2));
    }
}

